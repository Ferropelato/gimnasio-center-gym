rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para productos (público, solo lectura)
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Reglas para órdenes (solo usuarios autenticados pueden crear/leer sus propias órdenes)
    match /orders/{orderId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if false;
    }
    
    // Reglas para carritos (usuarios autenticados pueden leer/escribir su propio carrito)
    match /carts/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}


